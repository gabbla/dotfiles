#!/usr/bin/env python3
import os

def getColor(used):
    if used <= 50:
        return "#6BF442" 
    elif used <= 90:
        return "#F1F442"
    else:
        return "#F44242"

# get disk usage
disk = int(os.popen("df -h --output='pcent' / | tail -n1 | tr -s ' ' | tr -s '\n'").read()[:-2])
string = "ï‚  " + str(disk) + "%"
color = getColor(disk)
print(string)
print("")
print(color)
